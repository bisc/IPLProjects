use model prism_probs;

// valid     
exists x : {0, 1, 2} |    
	forall y : {0, 1, 2} |     
		P>0.5 [F (x + y > 1)]{||};        
		     
exists x : {0, 1} |    
	forall y : {1, 2} |     
		P>0.5 [F (y + 1 > 1)]{||};    
  
exists x : {1, 2, 3} |  
	P>0.5 [F (x + 1 > 3)]{||};
           
// invalid 
exists x : {0, 1, 2} |  
	forall y : {0, 1, 2} |     
		P>0.5 [F (x + y > 2)]{||};        
          
forall x : {1, 2, 3} |  
	P>0.5 [F (x + 1 > 3)]{||};          
	     


	                        